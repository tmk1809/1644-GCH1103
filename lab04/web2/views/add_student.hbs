<div class="container col-md-6 card ">
<form action="/output" method="post">
   <h1 class="text text-primary bg-light text-center">Add new student</h1>
   <table class="table table-danger">
      <tr>
         <th>Name</th>
         <td>
            <input class="form-control" type="text" name="name" minlength="5" maxlength="30" required>
         </td>
      </tr>
      <tr>
         <th>Birthday</th>
         <td>
            <input class="form-control" type="date" name="dob" required>
         </td>
      </tr>
      <tr>
         <th>Email</th>
         <td>
            <input class="form-control" type="email" name="email" required>
         </td>
      </tr>
      <tr>
         <th>Gender</th>
         <td>
            <input type="radio" name="gender" value="Male"> Male
            <input type="radio" name="gender" value="Female"> Female
         </td>
      </tr>
      <tr>
         <th>Student year</th>
         <td>
            <input class="form-control" type="number" name="year" min="1" max="4">
         </td>
      </tr>
      <tr>
         <th>Major</th>
         <td>
            <select class="form-control" name="major" required>
               <option value="Computing">Computing</option>
               <option value="Business">Business</option>
               <option value="Graphic Design">Graphic Design</option>
               <option value="Marketing">Marketing</option>
            </select>
         </td>
      </tr>
      <tr>
         <th>Image</th>
         <td>
            <input class="form-control" type="url" name="image" required>
         </td>
      </tr>
      <tr>
         <th colspan="2">
            <input class="form-control" type="submit" value="Add">
         </th>
      </tr>
   </table>
</form>
</div>