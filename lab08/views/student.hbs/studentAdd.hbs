<div class="container col-md-8 mt-3 mb-3">
    <form action="/student/add" method="post">
        <h1 class="text text-danger">Add new student</h1>
        <div class="form-group">
            <label class="h5 text text-success" for="">Full name</label>
            <input class="form-control" type="text" name="name" required>
        </div>
        <div class="form-group">
            <label class="h5 text text-success" for="">Birthday</label>
            <input class="form-control" type="date" name="dob" required>
        </div>
        <div class="form-group">
            <label class="h5 text text-success" for="">Gender</label>
            Male <input type="radio" name="gender" value="male">
            Female <input type="radio" name="gender" value="female">
        </div>
        <div class="form-group">
            <label class="h5 text text-success" for="">Department</label><br>
            <select name="department">
                <option value="Computing">Computing</option>
                <option value="Business">Business</option>
                <option value="Graphic Design">Graphic Design</option>
            </select>
        </div>
        <div class="form-group">
            <label class="h5 text text-success" for="">Class</label>
            <input class="form-control" type="text" name="class" required>
        </div>
        <div class="form-group">
            <label class="h5 text text-success" for="">Image</label>
            <input class="form-control" type="file" name="image" required>
        </div>
        <div class="form-group">
            <label class="h5 text text-success" for="">GPA</label>
            <input class="form-control" type="text" name="gpa" required>
        </div>
        <div class="form-group">
            <label class="h5 text text-success" for="">Student Year</label>
            <input class="form-control" type="text" name="studentYear" required>
        </div>
        <div class="form-group">
            <input class="btn btn-primary mt-3" type="submit" value="Add">
        </div>
    </form>
</div>