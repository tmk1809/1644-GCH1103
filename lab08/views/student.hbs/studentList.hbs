<div class="container text-center mt-3 mb-3">
    <table>
        <tr>
            <th colspan="9">
                <h1 class="text text-primary">STUDENT LIST</h1>
            </th>
            <th>
                <a class="btn btn-primary" href="./student/add">Add</a>
            </th>
        </tr>
        <tr>
            <th>Name</th>
            <th>DoB</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Class</th>
            <th>Image</th>
            <th>GPA</th>
            <th>Student Year</th>
            <th>Menu</th>
        </tr>
        {{#each students }}
            <tr>
                    <td>{{ name }}</td>
                    <td>{{ dob }}</td>
                    <td>{{ gender }}</td>
                    <td>{{ department }}</td>
                    <td>{{class }}</td>
                    <td>{{ image }}</td>
                    <td>{{ gpa }}</td>
                    <td>{{ studentYear }}</td>
                    <td>
                        <a class="btn btn-primary" href="/student/edit/">Edit</a>
                        <a class="btn btn-danger" href="student/delete/" onclick="return confirm('Are you sure to delete this?')">Delete</a>
                    </td>
                    {{/each}}
                </tr>
        
    </table>
</div>